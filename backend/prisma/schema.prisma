// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Sale {
  id            Int      @default(autoincrement()) @id
  region        String
  country       String
  itemType      String
  salesChannel  String
  orderPriority String
  orderDate     DateTime
  orderId       Int      @unique
  shipDate      DateTime
  units         Float
  unitPrice     Float
  unitCost      Float
  total         Float
}

model Report {
  id        Int      @default(autoincrement()) @id
  fileHash  String
  records   Int
  createdAt DateTime @default(now())
}
